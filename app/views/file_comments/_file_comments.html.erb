<div class="modal-dialog modal-medium-width">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Comments</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
          <% comments.each do |comment| %>
            Comment: <%= text_field_tag "comment", comment.content, class: "form-control", placeholder: "Title", readonly: "readonly" %>
            <% if comment.replies.length > 0 %>
              <% comment.replies.each do |reply| %>
                <div style="padding-left: 10px;"%>Reply: <%= text_field_tag "reply", reply.content, class: "form-control", placeholder: "Title", readonly: "readonly" %> </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
</div>